@{
	ViewData["Title"] = "Browse Our Collection";
}

<!-- Hero Section -->
<section class="bg-primary bg-gradient text-white py-5">
	<div class="container-fluid py-5">
		<div class="row align-items-center">
			<div class="col-lg-6">
				<h1 class="display-3 fw-bold mb-3">Discover Your Next Favorite Book</h1>
				<p class="lead mb-4">Thousands of ebooks at your fingertips. Read anywhere, anytime on any device.</p>
				<div class="d-grid gap-2 d-md-flex justify-content-md-start">
					<a asp-area="Guest" asp-controller="Home" asp-action="BooksCollection" class="btn btn-light btn-lg px-4 me-md-2 fw-bold">Browse Collection</a>
					<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-light btn-lg px-4">Join Now</a>
				</div>
			</div>
			<div class="col-lg-6 d-none d-lg-block">
				<img src="https://www.apple.com/newsroom/images/2023/11/apple-unveils-the-top-books-of-2023-and-a-new-year-in-review-experience/article/Apple-Books-Year-in-Review-hero_inline.jpg.large.jpg"
					alt="Ebook reader" class="img-fluid rounded shadow-lg">
			</div>
		</div>
	</div>
</section>

<!-- Categories Section -->
<section class="py-5 bg-light">
	<div class="container py-5">
		<h2 class="display-6 fw-bold text-center mb-5">Explore Top Categories</h2>
		<div class="row g-4">
			<div class="col-md-4 col-sm-6">
				<div class="card h-100 shadow-sm">
					<div class="card-body text-center p-4">
						<div class="mb-4">
							<i class="bi bi-book text-primary" style="font-size: 2.5rem;"></i>
						</div>
						<h5 class="card-title fw-bold">Fiction</h5>
						<p class="card-text text-muted">Explore worlds of imagination through novels, short stories, and more.</p>
						<a href="#" class="btn btn-outline-primary mt-3">Browse Fiction</a>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-sm-6">
				<div class="card h-100 shadow-sm">
					<div class="card-body text-center p-4">
						<div class="mb-4">
							<i class="bi bi-lightbulb text-primary" style="font-size: 2.5rem;"></i>
						</div>
						<h5 class="card-title fw-bold">Self Improvement</h5>
						<p class="card-text text-muted">Discover insights and techniques to enhance your personal growth.</p>
						<a href="#" class="btn btn-outline-primary mt-3">Explore Self-Help</a>
					</div>
				</div>
			</div>
			<div class="col-md-4 col-sm-6">
				<div class="card h-100 shadow-sm">
					<div class="card-body text-center p-4">
						<div class="mb-4">
							<i class="bi bi-globe text-primary" style="font-size: 2.5rem;"></i>
						</div>
						<h5 class="card-title fw-bold">Non-Fiction</h5>
						<p class="card-text text-muted">Learn about history, science, biographies, and academic subjects.</p>
						<a href="#" class="btn btn-outline-primary mt-3">View Non-Fiction</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


@model Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-gradient-primary text-white p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="m-0 fw-bold">Book Details</h3>
                        <a asp-action="Index" class="btn btn-light rounded-pill px-4">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-4 position-relative book-cover-container">
                            <div class="book-cover-wrapper p-4 h-100 d-flex align-items-center justify-content-center bg-light">
                                @if (string.IsNullOrWhiteSpace(Model.Image))
                                {
                                    <img src="/Images/NoImage.png" class="img-fluid rounded-3 shadow" alt="No book image available" />
                                }
                                else
                                {
                                    <img src="/Uploads/@Model.Image" class="img-fluid rounded-3 shadow" alt="@Model.BookName cover" />
                                }
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="p-4 p-md-5">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h2 class="fw-bold text-primary mb-0">@Model.BookName</h2>
                                    <span class="badge bg-info rounded-pill fs-6 px-3 py-2">@Model.Genre.GenreName</span>
                                </div>
                                
                                <h5 class="text-muted mb-4">by <span class="fw-semibold">@Model.AuthorName</span></h5>
                                
                                <div class="mb-4">
                                    <div class="d-flex align-items-center">
                                        <h3 class="text-success fw-bold mb-0">$@Model.Price.ToString("0.00")</h3>
                                        @if (Model.Stock != null)
                                        {
                                            <span class="ms-3 badge bg-@(Model.Stock.Quantity > 0 ? "success" : "danger") px-3 py-2">
                                                @(Model.Stock.Quantity > 0 ? $"In Stock ({Model.Stock.Quantity})" : "Out of Stock")
                                            </span>
                                        }
                                    </div>
                                </div>
                                
                                <div class="book-description mb-4">
                                    <h5 class="fw-bold mb-3">Description</h5>
                                    <p class="lead">@Model.Description</p>
                                </div>
                                
                                <div class="book-details">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <div class="p-3 rounded-3 bg-light">
                                                <h6 class="text-muted mb-1">Book ID</h6>
                                                <p class="mb-0 fw-semibold">@Model.Id</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="p-3 rounded-3 bg-light">
                                                <h6 class="text-muted mb-1">Genre</h6>
                                                <p class="mb-0 fw-semibold">@Model.Genre.GenreName</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light p-4">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="UpdateBook" asp-controller="Book" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square me-2"></i>Edit
                        </a>
                        <form asp-area="Admin" asp-controller="Book" asp-action="DeleteBook" asp-route-id="@Model.Id">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return window.confirm('Are you sure you want to delete this book?')">
                                <i class="bi bi-trash me-2"></i>Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }
    
    .book-cover-container {
        min-height: 400px;
    }
    
    .book-cover-wrapper img {
        max-height: 400px;
        object-fit: contain;
    }
    
    .book-description {
        max-height: 200px;
        overflow-y: auto;
    }
</style>


@{
    ViewData["Title"] = "Order Success";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 mx-auto" style="max-width: 600px;">
        <div class="card-body p-5 text-center">
            <div class="mb-4">
                <div class="animation-ctn">
                    <div class="circle-border">
                        <div class="circle">
                            <div class="check-icon">
                                <i class="bi bi-check-lg text-success" style="font-size: 48px;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <h2 class="card-title mb-3 fw-bold text-success">Order Placed Successfully!</h2>
            <p class="text-muted mb-4">Thank you for your purchase. Your order has been successfully placed and will be processed soon.</p>
            
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                <a asp-area="User" asp-controller="UserOrder" asp-action="UserOrders" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="bi bi-bag-check me-2"></i>View My Orders
                </a>
                <a asp-area="Guest" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-house me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

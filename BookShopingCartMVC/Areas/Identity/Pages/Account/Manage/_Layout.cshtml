@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">Manage Your Account</h1>
        <p class="text-muted">Change your account settings and preferences</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="row g-0">
                    <!-- Sidebar Navigation -->
                    <div class="col-md-4 col-lg-3 border-end bg-light p-4 rounded-start">
                        <partial name="_ManageNav" />
                    </div>

                    <!-- Body Content -->
                    <div class="col-md-8 col-lg-9 p-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

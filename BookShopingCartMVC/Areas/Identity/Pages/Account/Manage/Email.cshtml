@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
        <p class="text-muted">Update your email address and verify your current one.</p>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0 rounded-4 p-4">
                <form id="email-form" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="form-floating mb-4 input-group">
                            <input asp-for="Email" class="form-control rounded-start" placeholder="Your current email" disabled />
                            <span class="input-group-text bg-success text-white fw-bold rounded-end">✓</span>
                            <label asp-for="Email"></label>
                        </div>
                    }
                    else
                    {
                        <div class="form-floating mb-4">
                            <input asp-for="Email" class="form-control" placeholder="Your current email" disabled />
                            <label asp-for="Email"></label>
                            <div class="mt-2">
                                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-outline-secondary btn-sm">
                                    Send Verification Email
                                </button>
                            </div>
                        </div>
                    }

                    <div class="form-floating mb-4">
                        <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Enter new email" />
                        <label asp-for="Input.NewEmail">New Email Address</label>
                        <span asp-validation-for="Input.NewEmail" class="text-danger small"></span>
                    </div>

                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary w-100 py-2 rounded-3 shadow-sm">
                        Change Email
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

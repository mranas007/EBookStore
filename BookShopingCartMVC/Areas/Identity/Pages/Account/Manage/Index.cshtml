@page
@model IndexModel
@{
    ViewData["Title"] = "Profile Settings";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-transparent border-0 py-4">
                    <h3 class="card-title mb-0 fw-bold text-primary">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4 p-sm-5">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="profile-form" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Username" class="form-label text-muted small mb-1"></label>
                            <div class="input-group">
                                <input asp-for="Username" class="form-control py-3" placeholder="Your username" disabled />
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-person-fill text-muted"></i>
                                </span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.PhoneNumber" class="form-label text-muted small mb-1"></label>
                            <div class="input-group">
                                <input asp-for="Input.PhoneNumber" class="form-control py-3" placeholder="Enter your phone number" />
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-telephone-fill text-muted"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid mt-5">
                            <button id="update-profile-button" type="submit" class="btn btn-primary py-3 fw-bold rounded-3">
                                <i class="bi bi-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
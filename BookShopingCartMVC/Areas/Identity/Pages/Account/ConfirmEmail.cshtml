@page
@model ConfirmEmailModel
@{
	ViewData["Title"] = "Email Confirmation";
}

<div class="container py-5">
	<div class="card shadow-lg border-0 mx-auto" style="max-width: 500px;">
		<div class="card-body p-4">
			<div class="text-center mb-4">
				<i class="bi bi-envelope-check display-4 text-primary mb-3"></i>
				<h2 class="card-title fw-bold">Email Confirmation</h2>
			</div>

			@if (!String.IsNullOrEmpty(Model.StatusMessage))
			{
				var statusMessageClass = Model.StatusMessage.Contains("Wrong") ? "danger" : "success";
				var statusMessageTitle = Model.StatusMessage.Contains("Wrong") ? "Error" : "Success";
				var statusMessageIcon = Model.StatusMessage.Contains("Wrong") ? "bi-exclamation-triangle-fill" : "bi-check-circle-fill";
				var statusMessageColor = Model.StatusMessage.Contains("Wrong") ? "#dc3545" : "#198754";

				<div class="alert alert-@statusMessageClass d-flex align-items-center border-0 rounded-3 mb-4" role="alert" style="background-color: @(statusMessageClass == "danger" ? "#fff5f5" : "#f0fff4");">
					<i class="bi @statusMessageIcon flex-shrink-0 me-3" style="font-size: 1.5rem; color: @statusMessageColor!;"></i>
					<div>
						<h5 class="alert-heading mb-1">@statusMessageTitle</h5>
						<p class="mb-0">@Model.StatusMessage</p>
					</div>
				</div>
			}
			@if (!Model.StatusMessage.Contains("Wrong"))
			{
				<div class="text-center">
					<p class="text-muted mb-4">You can now access your account.</p>
					<a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg px-5 rounded-pill">
						<i class="bi bi-box-arrow-in-right me-2"></i>Log in to your account
					</a>
				</div>
			}
		</div>
	</div>
</div>

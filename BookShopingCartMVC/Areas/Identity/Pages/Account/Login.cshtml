@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container my-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 text-primary">Welcome Back</h2>
                    <p class="text-center text-muted mb-4">Please enter your login details</p>
                    <hr class="mb-4" />

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control rounded-3" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control rounded-3" autocomplete="current-password" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2 rounded-3 shadow-sm">
                            Log in
                        </button>

                       
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="text-muted mb-2">If you don't have an Account <a asp-page="./Register">Click Here</a> to Register a New Account</p>
                    </div>
                    <div class="mt-4 text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="d-block small text-muted">Forgot your password?</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="d-block small text-muted mt-1">Resend email confirmation</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

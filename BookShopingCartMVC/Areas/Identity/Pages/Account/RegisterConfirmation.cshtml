@page
@model RegisterConfirmationModel
@{
	ViewData["Title"] = "Registration Confirmation";
}

<div class="min-vh-100">
	<h1 class="text-center text-primary mb-4 mt-5">@ViewData["Title"]</h1>
	<div class="card shadow-sm mx-auto" style="max-width: 500px;">
		<div class="card-body p-4 text-center">
			<p class="lead mb-3">
				Thank you for registering! To complete your registration, please check your email and confirm your account.
			</p>
			<p class="text-muted">
				If you don't see the email in a few minutes, please check your spam folder.
			</p>
			<a href="/" class="btn btn-primary mt-3">Return to Home</a>
		</div>
	</div>
</div>

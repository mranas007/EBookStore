@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - EBookStore</title>
	<script type="importmap"></script>
	<link rel="icon" href="~/images/icons/fav-icon.webp" type="image/x-icon" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BookShopingCartMVC.styles.css" asp-append-version="true" />

	@* --------- bootstrap icon --------- *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
	<header class="sticky-top">
		<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm py-3">

			<div class="container">

				<!-- Brand -->
				<a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
					EBOOKSTORE
				</a>

				<!-- Toggler -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
						aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Collapsible Menu -->
				<div class="collapse navbar-collapse" id="mainNavbar">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
							aria-current="page" asp-area="Guest" asp-controller="Home" asp-action="Index">
								Home
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "BooksCollection" ? "active" : "")"
							href='@Url.Action("BooksCollection", "Home", "Guest")'>Books</a>
						</li>
					</ul>

					<!-- Login/Profile -->
					<div class="d-flex">
						<partial name="_LoginPartial" />
					</div>
				</div>

			</div>
		</nav>
	</header>


	<div class="container-fluid p-0">
		<main role="main">
			@RenderBody()
		</main>
	</div>


	<footer style="background-color: #1f2937;" class="stext-light text-white text-center text-lg-start shadow-sm">
		<div class="container p-5">
			<div class="row">
				<!-- Column 1: About -->
				<div class="col-lg-4 col-md-6 mb-4 mb-md-0">
					<h5 class="text-uppercase fw-bold mb-3">EBookStore</h5>
					<p class="text-light small">
						Your one-stop shop for digital and printed books. Discover the best reads across all genres.
					</p>
				</div>

				<!-- Column 2: Quick Links -->
				<div class="col-lg-4 col-md-6 mb-4 mb-md-0">
					<h5 class="text-uppercase fw-bold mb-3">Quick Links</h5>
					<ul class="list-unstyled mb-0">
						<li><a href="/" class="text-light text-decoration-none">Home</a></li>
						<li><a href="/Privacy" class="text-light text-decoration-none">Privacy Policy</a></li>
						<li><a href="/Contact" class="text-light text-decoration-none">Contact Us</a></li>
					</ul>
				</div>

				<!-- Column 3: Contact -->
				<div class="col-lg-4 col-md-12 mb-4 mb-md-0">
					<h5 class="text-uppercase fw-bold mb-3">Contact</h5>
					<p class="text-light small mb-1">📍 123 Book Lane, Library City</p>
					<p class="text-light small mb-1">📞 +1 (555) 123-4567</p>
					<p class="text-light small">📧 support@ebookstore.com</p>
				</div>
			</div>
		</div>

		<div class="text-center p-3 border-top text-light small" style="background-color: rgba(0, 0, 0, 0.05);">
			© @DateTime.Now.Year EBookStore. All rights reserved.
		</div>
	</footer>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

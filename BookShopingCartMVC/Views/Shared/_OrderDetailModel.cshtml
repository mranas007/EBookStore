@model OrderDetailDto

<div class="modal fade" id="modal-@Model.DivId" tabindex="-1" aria-labelledby="orderDetailModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-lg">
		<div class="modal-content border-0 shadow">
			<!-- Modal Header with styling -->
			<div class="modal-header bg-primary text-white">
				<h5 class="modal-title" id="orderDetailModalLabel">
					<i class="bi bi-bag-check me-2"></i>Order Details
				</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>

			<!-- Order Summary Section -->
			<div class="modal-body">
				<div class="card mb-4 border-0 shadow-sm">
					<div class="card-header bg-light">
						<h6 class="mb-0">Order Summary</h6>
					</div>
					<div class="card-body">
						<div class="row">
							<div class="col-md-6">
								<p><strong>Order #:</strong> @Model.DivId</p>
								@* <p><strong>Date:</strong> @Model.OrderDate?.ToString("MMM dd, yyyy")</p> *@
							</div>
							<div class="col-md-6 text-md-end">
								<p><strong>Status:</strong> <span class="badge bg-success">Completed</span></p>
								<p><strong>Total Items:</strong> @Model!.OrderDetail!.Sum(x => x.Quantity)</p>
							</div>
						</div>
					</div>
				</div>

				<!-- Order Items Table -->
				<div class="table-responsive">
					<table class="table table-hover">
						<thead class="table-light">
							<tr>
								<th>Book</th>
								<th>Genre</th>
								<th class="text-end">Price</th>
								<th class="text-center">Quantity</th>
								<th class="text-end">Total</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.OrderDetail)
							{
								<tr>
									<td>
										<div class="d-flex align-items-center">
											<div class="bg-light p-2 rounded me-2 d-none d-sm-block">
												<i class="bi bi-book text-primary"></i>
											</div>
											<div>
												<h6 class="mb-0">@item.Book.BookName</h6>
												@if (!string.IsNullOrEmpty(item.Book.AuthorName))
												{
													<small class="text-muted">by @item.Book.AuthorName</small>
												}
											</div>
										</div>
									</td>
									<td><span class="badge bg-light text-dark">@item.Book.Genre.GenreName</span></td>
									<td class="text-end">$@item.UnitPrice.ToString("0.00")</td>
									<td class="text-center">@item.Quantity</td>
									<td class="text-end fw-bold">$@((item.Quantity * item.UnitPrice).ToString("0.00"))</td>
								</tr>
							}
						</tbody>
						<tfoot class="table-light">
							<tr>
								<td colspan="4" class="text-end fw-bold">Subtotal:</td>
								<td class="text-end fw-bold">$@Model.OrderDetail.Sum(x => x.Quantity * x.UnitPrice).ToString("0.00")</td>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

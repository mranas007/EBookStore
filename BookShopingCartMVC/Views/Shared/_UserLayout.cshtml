@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - EBookStore</title>
	<script type="importmap"></script>
	<link rel="icon" href="~/images/icons/fav-icon.webp" type="image/x-icon" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BookShopingCartMVC.styles.css" asp-append-version="true" />

	@* --------- bootstrap icon --------- *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm py-3">
			<div class="container">

				<!-- Brand -->
				<a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
					EBOOKSTORE
				</a>

				<!-- Mobile-only Cart Icon -->

				<a asp-controller="Cart" asp-action="GetUserCart" class="nav-link text-dark d-lg-none position-relative ms-auto me-4">
					<i class="bi bi-cart-dash-fill fs-5"></i>
					<span class="cartItemCount position-absolute top-0 start-100 translate-middle badge rounded-pill bg-info text-black">
						0
						<span class="visually-hidden">items in cart</span>
					</span>
				</a>


				<!-- Toggler -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
						aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Collapsible Menu -->
				<div class="collapse navbar-collapse" id="mainNavbar">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" asp-area="User" asp-controller="Home" asp-action="Index">
								Home
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="User" asp-controller="Home" asp-action="Books">
								Books
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="User" asp-controller="UserOrder" asp-action="UserOrders">
								My Orders
							</a>
						</li>
					</ul>

					<!-- Desktop-only Cart Icon -->

					<div class="nav-item d-none d-lg-block">
						<a asp-area="User" asp-controller="Cart" asp-action="GetUserCart" class="nav-link text-dark position-relative me-4">
							<i class="bi bi-cart-dash-fill fs-5"></i>
							<span class="cartItemCount position-absolute top-0 start-100 translate-middle badge rounded-pill bg-info text-black">
								0
								<span class="visually-hidden">items in cart</span>
							</span>
						</a>
					</div>


					<!-- Login/Profile -->
					<div class="d-flex">
						<div class="dropdown ms-auto ms-lg-0">
							<a class="btn btn-outline-primary dropdown-toggle rounded-pill px-3 fw-semibold" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="bi bi-person-circle me-1"></i> Account
							</a>
							<ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3" aria-labelledby="userDropdown">
								<li>
									<a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
										<i class="bi bi-gear me-2"></i> Profile Settings
									</a>
								</li>
								<li>
									<hr class="dropdown-divider" />
								</li>
								<li>
									<form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
										<button type="submit" class="dropdown-item text-danger">
											<i class="bi bi-box-arrow-right me-2"></i> Logout
										</button>
									</form>
								</li>
							</ul>
						</div>
					</div>
				</div>

			</div>
		</nav>
	</header>

	<div class="container-fluid p-0">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<footer style="background-color: #1f2937;" class="stext-light text-white text-center text-lg-start shadow-sm">
		<div class="container p-5">
			<div class="row">
				<!-- Column 1: About -->
				<div class="col-lg-4 col-md-6 mb-4 mb-md-0">
					<h5 class="text-uppercase fw-bold mb-3">EBookStore</h5>
					<p class="text-light small">
						Your one-stop shop for digital and printed books. Discover the best reads across all genres.
					</p>
				</div>

				<!-- Column 2: Quick Links -->
				<div class="col-lg-4 col-md-6 mb-4 mb-md-0">
					<h5 class="text-uppercase fw-bold mb-3">Quick Links</h5>
					<ul class="list-unstyled mb-0">
						<li><a href="/" class="text-light text-decoration-none">Home</a></li>
						<li><a href="/Privacy" class="text-light text-decoration-none">Privacy Policy</a></li>
						<li><a href="/Contact" class="text-light text-decoration-none">Contact Us</a></li>
					</ul>
				</div>

				<!-- Column 3: Contact -->
				<div class="col-lg-4 col-md-12 mb-4 mb-md-0">
					<h5 class="text-uppercase fw-bold mb-3">Contact</h5>
					<p class="text-light small mb-1">📞 03344373845</p>
					<p class="text-light small">📧 mr.anas1003@gmail.com</p>
				</div>
			</div>
		</div>

		<div class="text-center p-3 border-top text-light small" style="background-color: rgba(0, 0, 0, 0.05);">
			© @DateTime.Now.Year EBookStore. All rights reserved.
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	<script>
		// function to update the cart count on page load
		function updateCartCount() {
			$.ajax({
				url: '@Url.Action("GetCartItemCount", "Cart")', // Adjust the URL to match your controller and action
				method: 'GET',
				success: function (data) {
					$('.cartItemCount').text(data);
				},
				error: function () {
					console.error('Failed to fetch cart item count.');
				}
			});
		}
		updateCartCount();
	</script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
